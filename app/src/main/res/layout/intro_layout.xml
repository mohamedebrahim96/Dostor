<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="0dp"
        card_view:cardCornerRadius="7dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <FrameLayout
            android:background="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            card_view:cardCornerRadius="7dp"
            android:layout_margin="2dp"
            android:background="#2f00f1"
            card_view:cardElevation="100dp"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <TextView android:id="@+id/intro_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/intro_1"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    />
                <TextView android:id="@+id/intro_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/intro_2_2014"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:textColor="#797979"
                    />
                <FrameLayout
                    android:background="#cecece"
                    android:layout_gravity="center"
                    android:padding="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView android:id="@+id/intro_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* يتم إيداع الاحكام في المضابط."
                    android:gravity="right"
                    android:textSize="10sp"
                    android:textColor="#797979"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>

</ScrollView>